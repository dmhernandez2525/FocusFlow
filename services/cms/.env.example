# =================================
# FOCUSFLOW CMS ENVIRONMENT VARIABLES
# =================================

# Node Environment
NODE_ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=http://localhost:1337

# Admin Panel Configuration
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-here
ADMIN_JWT_EXPIRES_IN=30d
ADMIN_JWT_ISSUER=focusflow-cms
ADMIN_JWT_SUBJECT=admin
ADMIN_URL=/admin
SERVE_ADMIN_PANEL=true

# API Tokens
API_TOKEN_SALT=your-api-token-salt-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Application Keys (comma-separated list)
APP_KEYS=key1,key2,key3,key4

# Database Configuration (PostgreSQL 17.6)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=focusflow_cms
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_SCHEMA=public

# Database Pool Configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_POOL_ACQUIRE_TIMEOUT=60000
DATABASE_POOL_CREATE_TIMEOUT=30000
DATABASE_POOL_DESTROY_TIMEOUT=5000
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_POOL_REAP_INTERVAL=1000
DATABASE_POOL_CREATE_RETRY_INTERVAL=200
DATABASE_CONNECTION_TIMEOUT=60000
DATABASE_DEBUG=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name
S3_ACL=public-read
S3_ROOT_PATH=uploads
S3_FORCE_PATH_STYLE=false
UPLOAD_SIZE_LIMIT=10485760

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@focusflow.com
REPLY_TO_EMAIL=support@focusflow.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:1337

# Rate Limiting
GLOBAL_RATE_LIMIT_WINDOW=900000
GLOBAL_RATE_LIMIT_MAX=100
ADMIN_RATELIMIT_ENABLED=true
ADMIN_RATELIMIT_INTERVAL=60000
ADMIN_RATELIMIT_MAX=5
AUTH_RATELIMIT_INTERVAL=60000
AUTH_RATELIMIT_MAX=3

# Logging
LOG_LEVEL=debug
LOG_REQUESTS=true

# Webhooks
WEBHOOKS_POPULATE_RELATIONS=false
WEBHOOK_SECRET=your-webhook-secret

# Feature Flags
FLAG_NPS=false
FLAG_PROMOTE_EE=false
CRON_ENABLED=true

# Internationalization
DEFAULT_LOCALE=en

# Transfer Remote Configuration
TRANSFER_REMOTE_ENABLED=false
TRANSFER_REMOTE_URL=
TRANSFER_REMOTE_SECRET=

# Admin Panel Forgot Password
ADMIN_FORGOT_PASSWORD_FROM=noreply@focusflow.com
ADMIN_FORGOT_PASSWORD_REPLY_TO=support@focusflow.com

# Proxy Configuration
IS_PROXIED=false

# Multi-tenant Configuration (for future use)
TENANT_ID=default
TENANT_ISOLATION_ENABLED=false