{
  "name": "@focusflow/payment-service",
  "version": "1.0.0",
  "description": "High-performance Fastify payment service with Stripe integration",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
