{
  "name": "@focusflow/queue",
  "version": "1.0.0",
  "description": "BullMQ-based queue system for FocusFlow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t focusflow-queue .",
    "docker:run": "docker run -p 3001:3001 focusflow-queue"
  },
  "dependencies": {
    "bullmq": "5.58.9",
    "ioredis": "^5.4.1",
    "@bull-board/api": "^5.14.2",
    "@bull-board/express": "^5.14.2",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "joi": "^17.12.2",
    "sharp": "^0.33.2",
    "puppeteer": "^22.5.0",
    "nodemailer": "^6.9.12",
    "axios": "^1.6.8",
    "pdfkit": "^0.15.0",
    "handlebars": "^4.7.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.4",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "bullmq",
    "queue",
    "redis",
    "typescript",
    "jobs",
    "background-processing"
  ],
  "author": "FocusFlow Team",
  "license": "MIT"
}