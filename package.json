{
  "name": "focusflow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*",
    "infrastructure/database"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "cd infrastructure/database && pnpm run migrate:latest",
    "db:rollback": "cd infrastructure/database && pnpm run migrate:rollback",
    "db:status": "cd infrastructure/database && pnpm run migrate:status",
    "db:seed": "cd infrastructure/database && pnpm run seed:run",
    "db:reset": "cd infrastructure/database && pnpm run db:reset",
    "db:setup": "cd infrastructure/database && pnpm install && pnpm run build && pnpm run migrate:latest && pnpm run seed:run"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}